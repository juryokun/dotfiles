{
    /* 共通設定 */
    "window.zoomLevel": 0,
    "debug.allowBreakpointsEverywhere": true,
    "terminal.integrated.fontFamily": "HackGen",
    "terminal.integrated.fontSize": 16,
    "vim.easymotion": false,
    "vim.sneak": true,
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "vim.whichwrap": "h,l,<,>,[,]",
    "vim.leader": "<Space>",
    "vim.useSystemClipboard": true,
    "vim.highlightedyank.enable": true,
    "vim.hlsearch": true,
    "workbench.colorTheme": "Monokai Dimmed",
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.insert": "#5f8787",
    "vim.statusBarColors.normal": "#294372",
    "vim.statusBarColors.visual": "#af5f87",
    "vim.statusBarColors.visualblock": "#af5f87",
    "vim.statusBarColors.visualline": "#af5f87",
    "vim.statusBarColors.replace": "#5f0000",
    "workbench.colorCustomizations": {
        "statusBar.background": "#af5f87",
        "statusBar.noFolderBackground": "#af5f87",
        "statusBar.debuggingBackground": "#af5f87"
    },
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
    "explorer.openEditors.visible": 0,
    "workbench.editor.openPositioning": "first",
    "workbench.editor.tabSizing": "shrink",
    "files.autoGuessEncoding": true,
    "workbench.editor.enablePreview": false,
    "files.trimTrailingWhitespace": true,
    "editor.renderWhitespace": "all",
    "explorer.autoReveal": false,
    "vim.cursorStylePerMode.visual": "block",
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "ctrl+j"
            ],
            "after": [
                "4",
                "j",
            ]
        },
        {
            "before": [
                "ctrl+k"
            ],
            "after": [
                "4",
                "k",
            ]
        },
        {
            "before": [
                "u"
            ],
            "commands": [
                "undo"
            ]
        },
        {
            "before": [
                "<C-r>"
            ],
            "commands": [
                "redo"
            ]
        }
    ],
    "editor.lineNumbers": "relative",
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "vscode-icons",
    "workbench.tree.indent": 20,
    "workbench.tree.renderIndentGuides": "always",
    "editor.showFoldingControls": "always",
    "terminal.integrated.defaultProfile.linux": "fish",
    "terminal.integrated.sendKeybindingsToShell": true,
    /* 個別設定 */
    "plantuml.render": "PlantUMLServer",
    "plantuml.server": "http://localhost:1991",
    "editor.fontFamily": "HackGen",
    "editor.fontSize": 17,
    "python.venvPath": "~/pyvenv"
}